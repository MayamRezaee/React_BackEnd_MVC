@model DataBaseEntities.Models.ViewModel.CountryViewModel
@{
    ViewData["Title"] = "AddCountry";
}

<h5>Add Country</h5>

<div class="row">

    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddCountry" method="post">
