@using DataBaseEntities.Models.ViewModel;
@model CityCreationViewModel
@{
    ViewData["Title"] = "AddCity";
}

<h5>Add City</h5>

<div class="row">

    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddCity" method="post">
                <div class="form-group">
                    <label asp-for="CityName" class="control-label"></label>
                    <input asp-for="CityName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="CountryName" class="control-label"></label>
                    <select asp-for="CountryName">
                        @foreach(Country country in ViewBag.Countries)
                            {
                        <option value="@country.CountryName">@country.CountryName</option>
                            }
                    </select>
                </div>

                

                <div class="form-group">
                    <input type="submit" value=" Add" class=" btn btn-primary" />
                </div>

            </form>


        </div>

    </div>

</div>

